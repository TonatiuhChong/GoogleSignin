<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tonatiuhchong.googlesignin.SignUpActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:text="Introduce tu Usuario o Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/EditEmailR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Introduce tu contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/EditPasswordR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
    android:text="Confirma tu contraseña"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/EditPassword2R"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/LoginR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/RegisterR"
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
